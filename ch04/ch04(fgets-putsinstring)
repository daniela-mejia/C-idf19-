#include <stdio.h>
// this program are examples of fgets and puts works for strings 
int main ()
{
    char buff[4];                        // Will store string

    printf("Enter string: \n");            // Prompts user
    fgets(buff, sizeof(buff), stdin);      // Stores user string
    printf("Your string was: \n");         // Prefaces output
    puts(buff);                          // Writes to stdout



    printf("Enter string: \n");            // Prompts user
    fgets(buff, sizeof(buff), stdin);      // Stores user string
    printf("Your string was: \n");         // Prefaces output
    fputs(buff, stdout);     // use stdout before the variable 
    
    return 0;

}